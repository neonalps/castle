{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es6"
        ],
        "types": ["node"],
        "paths": {
            "@src/*": ["src/*"]
        },
        "baseUrl": ".",
        "module": "commonjs",
        "rootDir": "src",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    }
}